<%= form_for [:admin, @post], html: { multipart: true } do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.trix_editor :body, required: true, autofocus: true %>
  </div>
  
  <div class="form-group">
    <%= f.label :position %>
    <%= f.number_field :position, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :publication %>
    <%= f.select :publication, %w[published un-published], { include_blank: false }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :image_url %>
    <p><%= image_tag(@post.image_url.icon.url, class: 'image-sound') if @post.image_url? %></p>
    <%= f.file_field :image_url, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit t('.submit', action: @post.new_record? ? 'Create' : 'Save'), class: 'btn btn-primary' %>
    <%= link_to t('.common.back'), :back, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
